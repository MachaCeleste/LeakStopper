{
  "manifest_version": 3,
  "name": "Leak Stopper",
  "version": "1.0.0",
  "description": "Redacts user-stored sensitive text on webpages.",
  "author": "Macha Celeste",
  "homepage_url": "https://github.com/MachaCeleste",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
